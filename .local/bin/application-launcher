#!/bin/sh
# A simple shell script to start the application launcher in rofi
# The application launcher launches common applications such as the color picker, wallpaper switcher, clipboard history selector, emoji selector and so on.

OPTIONS=(
	"Color Picker"
	"Wallpaper Selection"
	"Emoji Selector"  
	"Browser"
	"Code"
	"Power Menu"
	"Files"
	"PDF Reader"
	"Clipboard History"
	"Mail"
	"Music"
)
IFS=$'\n'
SELECTED="$(echo "${OPTIONS[*]}" | rofi -dmenu -i )"

case "${SELECTED}" in
    "Color Picker")
	# pacman -S hyprpicker
	niri msg action spawn-sh -- "hyprpicker | wl-copy"
	;;

    "Browser")
	# paru -S brave-bin
	niri msg action spawn -- brave
	;;

    "Code")
	# paru -S visual-studio-code-bin
	niri msg action spawn-sh -- "alacritty --class 'Code' -e ~/.local/bin/code"
	;;

    "Clipboard History")
	# pacman -S cliphist wl-clipboard
	~/.local/bin/clipboard
	;;

    "Files")
	# pacman -S xdg-desktop-portal-gnome
	niri msg action spawn -- nautilus
	;;

    "PDF Reader")
	# pacman -S zathura
	niri msg action spawn -- zathura
	;;

    "Power Menu")
	~/.local/bin/power-menu
	;;

    "Emoji Selector")
	# pacman -S rofi-emoji noto-fonts-emoji
	~/.local/bin/emoji-picker	
	;;

    "Wallpaper Selection")
	# pacman -S swaybg
	~/.local/bin/wallpapers
	;;

    "Mail")
	# pacman -S aerc
	 niri msg action spawn-sh -- "alacritty --class 'Mail' -e aerc" # Start the email client
	;;

    "Music")
	# pacman -S aerc
	 niri msg action spawn-sh -- "alacritty --class 'Music' -e 'ncmpcpp'" # Start the music client for mpd
	;;

    *)
	;;
esac


