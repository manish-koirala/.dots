#!/bin/sh
# A simple shell script to start the application launcher in rofi
# The application launcher launches common applications such as the color picker, wallpaper switcher, clipboard history selector, emoji selector and so on.

OPTIONS=(
	"Color Picker"
	"Wallpaper Selection"
	"Emoji Selector"  
	"Browser"
	"Code"
	"Power Menu"
	"Files"
	"PDF Reader"
	"Clipboard History"
	"Mail"
	"Music"
)
IFS=$'\n'
SELECTED="$(echo "${OPTIONS[*]}" | rofi -dmenu -i )"

case "${SELECTED}" in
    "Color Picker")
	# pacman -S hyprpicker
	echo -n $(hyprpicker) | wl-copy
	;;

    "Browser")
	# paru -S brave-bin
	brave
	;;

    "Code")
	# pacman -S neovim
	alacritty --class 'Code' -e nvim
	;;

    "Clipboard History")
	# pacman -S cliphist wl-clipboard
	~/.local/bin/clipboard
	;;

    "Files")
	# pacman -S xdg-desktop-portal-gnome
	nautilus
	;;

    "PDF Reader")
	# pacman -S zathura
	zathura
	;;

    "Power Menu")
	~/.local/bin/power-menu
	;;

    "Emoji Selector")
	# pacman -S rofi-emoji noto-fonts-emoji
	~/.local/bin/emoji-picker	
	;;

    "Wallpaper Selection")
	# pacman -S swaybg
	~/.local/bin/wallpapers
	;;

    "Mail")
	# pacman -S aerc
	alacritty --class 'Mail' -e aerc
	;;

    "Music")
	# pacman -S ncmpcpp
	alacritty --class 'Music' -e 'ncmpcpp'
	;;

    *)
	;;
esac


